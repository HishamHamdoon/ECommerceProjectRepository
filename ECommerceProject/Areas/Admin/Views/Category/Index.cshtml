<div class="container">
    <div class="card">
        <div class="card-header">
            <div class="row pt-0">
                <div class="col-6">
                    <h2 class="text-primary">  Category List</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Category</a>
                </div>
            </div>
            
        </div>
        <div class="card-body">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category Name</th>
                        <th>Display Name</th>
                        <th>Action Edit - Delete</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger mx-2"><i class="bi bi-trash"></i></a>
                                    <a asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary mx-2"><i class="bi bi-pencil-square">  </i></a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
    
</div>
 